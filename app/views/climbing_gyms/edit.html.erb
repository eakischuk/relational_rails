
  <%= form_with url: "/climbing_gyms/#{@gym.id}", method: :patch, local: true do |f| %>

    <%= f.label :name %><br>
    <%= f.text_field :name, value:@gym.name %><br>
    <%= f.radio_button :ropes_available, 'true', :checked => (@gym.ropes == true) %>
    <%= f.label :ropes_available_true, 'Ropes' %>
    <%= f.radio_button :ropes_available, 'false', :checked => (@gym.ropes == false) %>
    <%= f.label :ropes_available_false, 'No Ropes' %><br>
    <%= f.label :total_routes %><br>
    <%= f.number_field :total_routes, value:@gym.total_routes %><br>
    <%= f.submit "Update #{@gym.name}" %>
  <% end %>
