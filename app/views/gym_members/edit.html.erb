

  <%= form_with url: "/gym_members/#{@gym_member.id}", method: :patch, local: true do |f| %>

    <%= f.label :first_name %><br>
    <%= f.text_field :first_name, value:@gym_member.first_name %><br>
    <%= f.label :last_name %><br>
    <%= f.text_field :last_name, value:@gym_member.last_name %><br>
    <%= f.radio_button :belay_status, 'true', :checked => (@gym_member.belay_status == true) %>
    <%= f.label :belay_status_true, 'Belay Certified' %>
    <%= f.radio_button :belay_status, 'false', :checked => (@gym_member.belay_status == false) %>
    <%= f.label :belay_status_false, 'Not Belay Certified' %><br>
    <%= f.label :monthly_checkins %><br>
    <%= f.number_field :monthly_checkins, value:@gym_member.monthly_checkins %><br>
    <%= f.submit "Update #{@gym_member.full_name}" %>
  <% end %>
